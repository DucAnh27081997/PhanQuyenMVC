@model IEnumerable<AppEnglishTest.Areas.administrator.Models.DataModel.Business>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/adminstrator/Views/Shared/AdminView.cshtml";
}

<h2>Index</h2>

<p>
<p>
    @Html.ActionLink("Update Businesses", "UpdateBusinesses")
</p>
<i>@ViewBag.Error</i>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BusinessName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BusinessName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BusinessId }) |
            @Html.ActionLink("Details Action", "Index", "Permissions", new { id = item.BusinessId }, null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BusinessId })
        </td>
    </tr>
}

</table>
